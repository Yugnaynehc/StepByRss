<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ex_RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="80dip" >

    <TextView
        android:id="@+id/user_IMG2"
        android:layout_width="58dip"
        android:layout_height="58dip"
        android:layout_margin="5px"
        android:background="@drawable/user_img" />

    <TextView
        android:id="@+id/PL_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Time" />

    <TextView
        android:id="@+id/PL_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_alignParentBottom="true"
        android:text="writer" />

    <TextView
        android:id="@+id/PL_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_IMG2"
        android:layout_alignBottom="@+id/user_IMG2"
        android:layout_toRightOf="@+id/user_IMG2"
        android:text="评论的内容……"
        android:textSize="12dip" />

</RelativeLayout>