<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ex_RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
     >

    
    <TextView
        android:id="@+id/EX_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView01"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/EX_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EX_Title"
        android:text="Time" />

    <TextView
        android:id="@+id/EX_Man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EX_Time"
        android:layout_alignBottom="@+id/EX_Time"
        android:layout_alignParentRight="true"
        android:text="writer" />

</RelativeLayout>